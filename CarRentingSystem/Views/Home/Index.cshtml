@model IndexViewModel
@{
    ViewData["Title"] = "Car Renting Worldwide";
}

@{
    var cars = Model.Cars;
    var firstCar = cars.Any() ? cars[0] : null;
    var secondCar = cars.Count() > 1 ? cars[1] : null;
    var thirdCar = cars.Count() > 2 ? cars[2] : null;
}
<div class="mb-5"></div>
@if (!cars.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to the best place for renting cars!</h1>
        <p class="lead">There are not cars in the system currently available so why don't you just add one?</p>
        <hr class="my-4">
        <a asp-action="Add" asp-controller="Cars" class="btn btn-primary btn-lg" role="button">Add Car</a>
    </div>
}
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @if (firstCar != null)
        {
            <div class="carousel-item active">
                <img src="@firstCar.ImageUrl" class="d-block w-100" alt="@firstCar.Brand @firstCar.Model">
                <div class="carousel-caption" d-none d-md-block>
                    <h5><a class="btn-primary" asp-controller="Cars" asp-action="Details" asp-route-id="@firstCar.Id"> @firstCar.Year  @firstCar.Brand  @firstCar.Model</a></h5>
                </div>
            </div>
        }
        @if (secondCar != null)
        {
            <div class="carousel-item">
                <img src="@secondCar.ImageUrl" class="d-block w-100" alt="@secondCar.Brand @secondCar.Model">
                <div class="carousel-caption" d-none d-md-block>
                    <h5><a class="btn-primary" asp-controller="Cars" asp-action="Details" asp-route-id="@secondCar.Id">@secondCar.Year   @secondCar.Brand @secondCar.Model</a> </h5>
                </div>
            </div>
        }
        @if (thirdCar != null)
        {
            <div class="carousel-item">
                <img src="@thirdCar.ImageUrl" class="d-block w-100" alt="@thirdCar.Brand @thirdCar.Model">
                <div class="carousel-caption" d-none d-md-block>
                    <h5><a class="btn-primary" asp-controller="Cars" asp-action="Details" asp-route-id="@thirdCar.Id"> @thirdCar.Year  @thirdCar.Brand @thirdCar.Model</a></h5>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" role="button" data-target="#carouselExampleControls" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" role="button" data-target="#carouselExampleControls" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="mb-5"></div>

<div class="jumbotron">
    <div class="row" >
        <div class="col-md-4 text-center">
            <h2> @Model.TotalCars Cars</h2>
        </div>
        <div class="col-md-4 text-center">
            <h2> @Model.TotalUsers Users</h2>
        </div>
        <div class="col-md-4 text-center">
            <h2> @Model.TotalRents Rents</h2>
        </div>
    </div>
</div>



