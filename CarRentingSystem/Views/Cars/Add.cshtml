@model AddCarFormModel

@{
    ViewData["Title"] = "Add Car";
}
<h1 class="col-6 col-lg-9 text-center" >Add Car</h1>
<br/>

<form class="col-6 col-lg-9" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Brand"></label>
        <input asp-for="Brand" class="form-control" placeholder="BMW 400, Mercedes, etc..." value="BMW 600">
        <span asp-validation-for="Brand" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control" placeholder="640D, S-Class, etc..."  value="600Jet">
        <span asp-validation-for="Model" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" rows="4" class="form-control" placeholder="Good car" title="Koooo"></textarea>
        <span asp-validation-for="Description" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image"></label>
        <input asp-for="Image" class="form-control" placeholder="Your fime Url here."  value="https://images.pexels.com/photos/3752194/pexels-photo-3752194.jpeg">
        <span asp-validation-for="Image" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Year"></label>
        <input asp-for="Year" class="form-control" placeholder="@DateTime.UtcNow.Year" value="2020">
        <span asp-validation-for="Year" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-control">
            @foreach (var category in Model.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
        <span asp-validation-for="CategoryId" class="small text-danger"></span>
    </div>
    <input type="file" name="Imagef"/>

    <input class="btn btn-primary float-right" type="submit" value="Save"/>
</form>




