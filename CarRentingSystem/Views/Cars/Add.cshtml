@model AddCarFormModel

@{
    ViewData["Title"] = "Add Car";
}

<form class="col-6 col-lg-9" method="post">
    <div class="form-group">
        <label asp-for="Brand"></label>
        <input asp-for="Brand" class="form-control" placeholder="BMW 400, Mercedes, etc...">
    </div>
    <div class="form-group">
        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control" placeholder="640D, S-Class, etc...">
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" rows="4" class="form-control" placeholder="Good car"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Image"></label>
        <input asp-for="Image" class="form-control" placeholder="Your fime Url here.">
    </div>
    <div class="form-group">
        <label asp-for="Year"></label>
        <input type="number" asp-for="Year" class="form-control" placeholder="@DateTime.UtcNow.Year">
    </div>
    <div class="form-group">
        <label for="category">Category select</label>
        <select name="category" type="text" class="form-control" id="category-input">
            @foreach (var item in Model.Categories)
            {
                <option>@item.Name</option>
            }
        </select>
    </div>
    <input class="btn btn-primary float-right" type="submit" value="Save"/>
</form>




